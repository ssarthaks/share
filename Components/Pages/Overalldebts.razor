@page "/overalldebts"

<div class="debt-container">
        <h1 class="debt-header">Overall Debt Calculation</h1>

        <div class="filters">
            <input type="text" placeholder="Search..." class="search-input">
            <select>
                <option value="">Tags</option>
                <option value="emergency">Emergency Fund</option>
                <option value="utility">Utility Bills</option>
                <option value="mortgage">Mortgage</option>
            </select>
            <select>
                <option value="">Sort by</option>
                <option value="date">Date</option>
                <option value="amount">Amount</option>
            </select>
            <input type="date">
        </div>

        <table class="debt-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Tags</th>
                    <th>Note</th>
                    <th>Clear Debt</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2023-10-22</td>
                    <td>Personal Loan</td>
                    <td class="amount">$198</td>
                    <td><span class="tag">Emergency Fund</span></td>
                    <td>Fast food expense today</td>
                    <td><button class="clear-debt-btn">Clear Debt</button></td>
                </tr>
                <tr>
                    <td>2023-10-22</td>
                    <td>Utility Debt</td>
                    <td class="amount">$167</td>
                    <td><span class="tag">Electricity Bill</span></td>
                    <td>Fast food expense today</td>
                    <td><span class="status-cleared">Cleared</span></td>
                </tr>
                <tr>
                    <td>2023-10-31</td>
                    <td>Bank Loan</td>
                    <td class="amount">$1325</td>
                    <td><span class="tag">Mobile Peding Emi</span></td>
                    <td>Took a loan for bank for paying emi</td>
                    <td><button class="clear-debt-btn">Clear Debt</button></td>
                </tr>
                <tr>
                    <td>2023-10-31</td>
                    <td>Credit Card</td>
                    <td class="amount">$1600</td>
                    <td><span class="tag">Grocery Debt</span></td>
                    <td>Credit card debt for home groceries</td>
                    <td><span class="status-cleared">Cleared</span></td>
                </tr>
            </tbody>
        </table>
    </div>
